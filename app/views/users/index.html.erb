
<section class="wrapper">
  <!-- page start-->
  <div class="row">
    <div class="col-md-12">
      <section class="panel">
        <div class="panel-body profile-information">
          <div class="col-md-3">
            <div class="profile-pic text-center">
              <%= image_tag("user_logo.png") %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="profile-desk">
              <h1>
                <%= "#{current_user.first_name} #{current_user.last_name}" %>
              </h1>
              <span class="text-muted">
                <%= current_user.university.name %>, 
                <%= current_user.degree %>
                <% if(!current_user.graduation_year.blank?) %>
                  Class of
                  <%= current_user.graduation_year%>
                <% end %>
              </span>
              <div>
                <p>
                  <% if(current_user.description.blank?) %>
                    Please update your bio.
                  <% else %>
                  <%= current_user.description %>
                  <% end %>
                </p>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="profile-statistics">
              <h1>
                Member Since
              </h1>
              <p>
                <%= current_user.created_at.to_formatted_s(:month_day_year) %>
              </p>
              <h1>
                Last Active
              </h1>
              <p>
                <%= current_user.updated_at.to_formatted_s(:month_day_year) %>
              </p>
              <ul>
                <li>
                  <a href="#">
                    <i class="fa fa-facebook">
                    </i>
                  </a>
                </li>
                <li class="active">
                    <%= link_to "https://twitter.com/#{current_user.twitter_handle}" do%>
                      <i class="fa fa-twitter"></i>
                    <% end %>
                </li>
                <li>
                  <a href="#">
<script src="//platform.linkedin.com/in.js" type="text/javascript"></script>
<script type="IN/MemberProfile" data-id="http://www.linkedin.com/pub/chippy-kennedy/58/ba5/384" data-format="hover"></script>
                    <%= link_to "#{current_user.linkedin_id}" do%>
                      <i class="fa fa-linkedin"></i>
                    <% end %>
                  </a>
                </li>

    <!--t.string   "twitter_handle"
    t.string   "facebook_id"
    t.string   "linkedin_id"-->



              </ul>
            </div>
          </div>
        </div>
      </section>
    </div>
    <div class="col-md-12">
      <section class="panel">
        <header class="panel-heading tab-bg-dark-navy-blue">
          <ul class="nav nav-tabs nav-justified ">
            <li class="active">
              <a data-toggle="tab" href="#courses">
                Courses
              </a>
            </li>
            <li class="">
              <a data-toggle="tab" href="#overview">
                Community
              </a>
            </li>
            <li class="">

              <a data-toggle="tab" href="#settings">
                Settings
              </a>
            </li>




          </ul>
        </header>
        <div class="panel-body">
          <div class="tab-content tasi-tab">
<!-- Overview Tab Start-->
            <div id="overview" class="tab-pane">
              <div class="row">
                <div class="col-md-12">
                  <div class="recent-act">
                    <h1>
                      <%= current_user.university.name %>
                    </h1>
                    
                    
               
              
                 
                    
                  </div>
                </div>
           
              </div>
            </div>
<!-- Overview Tab End-->

<!-- Setting Tab Start-->       
           <div id="settings" class="tab-pane">
              <div class="row">
                <div class="col-md-12">
                  
              <%= render(:template => 'devise/registrations/edit', 
                          :locals => { 
                          :resource => current_user, 
                          :resource_name => current_user }) %>

                </div>
           
              </div>
            </div>
<!-- Setting Tab End-->
<!--TODO:  Count the number of courses in total user enrollments and make columns accordingly-->

<!-- Courses Tab Start-->
            <div id="courses" class="tab-pane active">
              <div class="row position-center">
                <div class="col-md-4">
                  <div class="prf-box">
                    <h3 class="prf-border-head">
                      MicroBiology
                    </h3>
                    <% if @enrollments.empty? %>

                    <%= link_to ' <div class=" wk-progress pf-status">
                        Enroll in a course to get started!
                      </div>'.html_safe, courses_path() %>

                      
                    <% else %> 
                    
                    <% @enrollments.each do |enrollment| %>
                    <div class="wk-progress pf-status">
                      <div class="col-md-4 col-xs-4">
                          <strong><%= enrollment.course.name %></strong>
                      </div>
                      <div stlye="margin-top:20px;">
                        <div class="col-md-3 col-xs-3">
                          <%= link_to chapter_path(enrollment.course) do %>
                          <button type="button" class="btn btn-primary btn-info btn-xs">
                            View
                          </button>
                          <%end%>
                        </div>
                        <div class="col-md-5 col-xs-5">
                          <%= button_to enrollment, :method => :delete, class: "btn btn-primary btn-danger btn-xs" do %>
                            Withdraw
                          <% end %>
                      </div>
                      </div>
                    </div>
                    <% end %>

                    
                      </div>
                    <%end%>
                  </div>
                </div>
              </div>
<!-- Courses Tab End-->


            </div>

          </div>
        
      </section>
      </div>