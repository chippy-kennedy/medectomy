
<section class="wrapper">
  <!-- page start-->
  <div class="row">
    <div class="col-md-12">
      <section class="panel">
        <div class="panel-body profile-information">
          <div class="col-md-3">
            <div class="profile-pic text-center">
              <%= image_tag("lock_thumb.png") %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="profile-desk">
              <h1>
                <%= "#{current_user.first_name} #{current_user.last_name}" %>
              </h1>
              <span class="text-muted">
                <%= current_user.university.name %>
              </span>
              <div>
                <p>
                  <% if(current_user.description.blank?) %>
                    Please update your bio.
                  <% else %>
                  <%= current_user.description %>
                  <% end %>
                </p>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="profile-statistics">
              <h1>
                Member Since
              </h1>
              <p>
                <%= current_user.created_at.to_formatted_s(:month_day_year) %>
              </p>
              <h1>
                Last Active
              </h1>
              <p>
                <%= current_user.updated_at.to_formatted_s(:month_day_year) %>
              </p>
              <ul>
                <li>
                  <a href="#">
                    <i class="fa fa-facebook">
                    </i>
                  </a>
                </li>
                <li class="active">
                  <a href="#">
                    <i class="fa fa-twitter">
                    </i>
                  </a>
                </li>
                <li>
                  <a href="#">
                    <i class="fa fa-linkedin">
                    </i>
                  </a>
                </li>
                <li>
                    <%= link_to '<i class="fa fa-wrench"></i>'.html_safe,edit_user_registration_path(current_user) %>
                </li>





              </ul>
            </div>
          </div>
        </div>
      </section>
    </div>
    <div class="col-md-12">
      <section class="panel">
        <header class="panel-heading tab-bg-dark-navy-blue">
          <ul class="nav nav-tabs nav-justified ">
            <li class="active">
              <a data-toggle="tab" href="#courses">
                Courses
              </a>
            </li>
            <li class="">
              <a data-toggle="tab" href="#overview">
                Recent Activity
              </a>
            </li>
            <li class="">
              <a data-toggle="tab" href="#settings">
                Settings
              </a>
            </li>
          </ul>
        </header>
        <div class="panel-body">
          <div class="tab-content tasi-tab">
<!-- Overview Tab Start-->
            <div id="overview" class="tab-pane">
              <div class="row">
                <div class="col-md-12">
                  <div class="recent-act">
                    <h1>
                      Recent Activity
                    </h1>
                    <div class="activity-icon terques">
                      <i class="fa fa-check">
                      </i>
                    </div>
                    <div class="activity-desk">
                      <h2>
                        1 Hour Ago
                      </h2>
                      <p>
                        Purchased new stationary items for head office
                      </p>
                    </div>
                    <div class="activity-icon red">
                      <i class="fa fa-beer">
                      </i>
                    </div>
                    <div class="activity-desk">
                      <h2 class="red">
                        2 Hour Ago
                      </h2>
                      <p>
                        Completed Coffee meeting with 
                        <a href="#" class="terques">
                          Stive Martin
                        </a>
                        regarding the Product Promotion
                      </p>
                    </div>
                    <div class="activity-icon green">
                      <i class="fa fa-map-marker">
                      </i>
                    </div>
                    <div class="activity-desk">
                      <h2 class="green">
                        yesterday
                      </h2>
                      <p>
                        Outdoor visit at 
                        <a href="#" class="blue">
                          California State Route
                        </a>
                        85 with 
                        <a href="#" class="terques">
                          John Boltana
                        </a>
                        & 
                        <a href="#" class="terques">
                          Harry Piterson
                        </a>
                        regarding to setup a new show room.
                      </p>
                      <div class="loc-map">
                        location map goes here
                      </div>
                    </div>
                    <div class="activity-icon yellow">
                      <i class="fa fa-user-md">
                      </i>
                    </div>
                    <div class="activity-desk">
                      <h2 class="yellow">
                        12 december 2013
                      </h2>
                      <p>
                        Montly Regular Medical check up at Greenland Hospital.
                      </p>
                    </div>
                  </div>
                </div>
           
              </div>
            </div>
<!-- Overview Tab End-->

<!-- Setting Tab Start-->       
           <div id="settings" class="tab-pane">
              <div class="row">
                <div class="col-md-12">
                  
              <%= render(:partial => "devise/registrations/edit" ,:controller=>"application") %>



















                </div>
           
              </div>
            </div>
<!-- Setting Tab End-->
<!-- Courses Tab Start-->
            <div id="courses" class="tab-pane active">
              <div class="position-center">
                     <div class="col-md-4">
                  <div class="prf-box">
                    <h3 class="prf-border-head">
                      enrolled in
                    </h3>
                    <% if @enrollments.nil? %>
                      <div class=" wk-progress pf-status">
                        enroll in a course to get started!
                      </div>
                    <% else %> 
                    <div class="wk-progress pf-status">
                      <div class="col-md-12 col-xs-12">
                          <strong><%= Course.find_by(name: "Virology").name%></strong>
                      </div>
                      <div stlye="margin-top:20px;">
                        <div class="col-md-3 col-xs-3">
                          <%= link_to chapter_path(Chapter.find(:first, :conditions => ["course_id = ?",Course.find_by(name: "Virology").id], :order => "number ASC").id) do %>
                          <button type="button" class="btn btn-primary btn-info btn-xs">
                            View
                          </button>
                          <%end%>
                        </div>
                        <div class="col-md-5 col-xs-5">
                          <button type="button" class="btn btn-primary btn-danger btn-xs">
                            Withdraw
                          </button>
                      </div>
                      </div>
                    </div>

                    
                      </div>
                    <%end%>
                  </div>
                </div>
              </div>
<!-- Courses Tab End-->


            </div>

          </div>
        
      </section>
      </div>