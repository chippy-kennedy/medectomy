<!--Sign Up  -->
<section id="subscribe-form" class="container">
	<h2  class="text-center">Request an Invitation</h2>
    <p class="text-center">Select medical school students will soon be contacted for participation in Medectomy's Beta Launch.</p>
    <div class="row-fluid">
        <div class="span4">
            <div class="span4 newsletter">
				<%= image_tag "ajax-loader.gif", class: "ajax-loader" %>
				<%= form_for @subscriber, html: { id: 'newsletter-form'} do |f| %></%>
				<%= f.text_field :first_name, placeholder:"First Name", style:"color:black"%></%>
				<%= f.text_field :last_name, placeholder: "Last Name", style:"color:black" %></%>
            </div>
        </div>
        <div class="span4">
            <div class="span4 newsletter">
				<%= f.text_field :email_primary, placeholder: "Primary (School) Email", style:"color:black" %></%>
				<%= f.text_field :email_secondary, placeholder: "Personal Email", style:"color:black" %></%>
            </div>
        </div>
        <div class="span4">
            <div class="span4 newsletter">
				<!--<%= f.text_field :current_level, placeholder: "Academic Level", style:"color:black" %></%>-->
                <%= f.select :current_level, [['Med Student','med_student'],['Undergraduate','undergraduate'],['Graduate Student','grad_student'],['Faculty','faculty']] %></%>
            </div>
        </div>
    </div>
    <div class="row">
            <div class="span3 offset5 newsletter">
				<%= f.submit "Subscribe", class:"button red"%></%>
                <% end %></%>
            </div>
     </div>

