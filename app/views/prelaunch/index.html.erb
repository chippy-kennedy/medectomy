<!-- Added Functionality to Index Carousel (Automatic Sliding)-->
<script type="text/javascript">
  $(document).ready(function() {
    $('.carousel').carousel({
      interval: 3000
    })
  });
</script>

<div class="lead-container">
<div class="container">

	<!-- Macbook carousel [Original]-->
	<div id="carousel" class="carousel slide macbook" rel="carousel">
		<%= image_tag "carousel-macbook.png", class:"carousel-macbook" %>
		<!-- Carousel items -->
		<div class="carousel-inner">
			<!-- Item -->
            <div class="item active">
				<a href="#"><%= image_tag "carousel/start.jpg" %></a>
			</div>
			<!-- end Item -->
			<!-- Item -->
			<div class="item">
				<%= image_tag "carousel/1_mac.jpg" %>
			</div>
			<!-- end Item -->
			<!-- Item -->
			<div class="item">
				<%= image_tag "carousel/2_mac.jpg" %>
			</div>
			<!-- end Item -->
			<!-- Item -->
			<div class="item">
				<%= image_tag "carousel/3_mac.jpg" %>
			</div>
			<!-- end Item -->
			<!-- Item -->
			<div class="item">
				<%= image_tag "carousel/4_mac.jpg" %>
			</div>
			<!-- end Item -->
		</div>
		<!-- Carousel navigation -->
		<a class="carousel-control left" href="#carousel" data-slide="prev"></a>
		<a class="carousel-control right" href="#carousel" data-slide="next"></a>
	</div>

	<!-- end Macbook carousel -->

</div>
</div>

<!--Info  -->
